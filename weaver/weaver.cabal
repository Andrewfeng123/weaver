                       base                 ^>=4.12.0.0,
                       clock                ^>=0.7.2,
                       containers           ^>=0.6.0.1,
                       dependent-map        ^>=0.2.4.0,
                       dependent-sum        ^>=0.4,
                       finite               ^>=0.1.0.0,
                       ismt                 ^>=0.1.0.0,
                       keys                 ^>=3.12.1,
                       mtl                  ^>=2.2.2,
                       optparse-applicative ^>=0.14.3.0,
                       text                 ^>=1.2.3.1,
                       these                ^>=0.7.6
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall
